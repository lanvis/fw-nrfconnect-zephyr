config SECURE_BOOT
	bool "Secure Boot Support"

if SECURE_BOOT

menu "Secure Boot Options"

choice
	prompt "C runtime setup selection"
	default SB_CUSTOM_BOOT
	config SB_CUSTOM_BOOT
		bool "Custom C runtime setup"
	config SB_ZEPHYR_BOOT
		bool "Zephyr C runtime setup"
	config SB_MDK_BOOT
		bool "MDK C runtime setup"
		select SB_SYSTEM_INIT(=y)
		select LINKER_DIR(="$ZEPHYR_BASE/subsys/bootloader/scripts/arm/cortex_m")
endchoice

config SB_FLASH_LOCKDOWN
	bool "Lock down flash before jumping to next stage."
    default y

config LINKER_DIR 
	string "Additional linker script path"
	depends on SB_MDK_BOOT

config SB_SYSTEM_INIT
	bool "Boot with chip specific initialization"

choice SB_SIG_ALGORITHM
	prompt "Signature algorithm to use for verification of firmware."
	default SB_SIG_ALGORITHM_ECDSA_SECP256
	config SB_SIG_ALGORITHM_ECDSA_SECP256
		bool "ECDSA with NIST curve secp256r1"

	config SB_SIG_ALGORITHM_RSA_2048
		bool "RSASSA-PSS, 2048 bits"
endchoice

config SB_SIG_LEN
	int
	default 32 if SB_SIG_ALGORITHM_ECDSA_SECP256
	default 256 if SB_SIG_ALGORITHM_RSA_2048

config SECURE_BOOT_DEBUG
	bool "Debugging support"

if SECURE_BOOT_DEBUG
choice
	prompt "Debug output selection"
	default SB_SEGGER_RTT
	config SB_SEGGER_RTT
		bool "SEGGER RTT debug support"
	config SB_UART
		bool "UART debug support"
endchoice

endif #SECURE_BOOT_DEBUG

if SB_SEGGER_RTT

config SB_SEGGER_RTT_MAX_NUM_UP_BUFFERS
	int "Maximum number of up-buffers"
	default 3

config SB_SEGGER_RTT_MAX_NUM_DOWN_BUFFERS
	int "Maximum number of down-buffers"
	default 3

config SB_SEGGER_RTT_BUFFER_SIZE_UP
	int "Size of the buffer for terminal output of target, up to host"
	default 1024

config SB_SEGGER_RTT_BUFFER_SIZE_DOWN
	int "Size of the buffer for terminal input of target, from host"
	default 16

config SB_SEGGER_RTT_PRINTF_BUFFER_SIZE
	int "Size of buffer for RTT printf to bulk-send chars via RTT"
	default 64

choice
	prompt "Mode for pre-initialized terminal channel (buffer 0)"
	default SB_SEGGER_RTT_MODE_NO_BLOCK_SKIP
	config SB_SEGGER_RTT_MODE_NO_BLOCK_SKIP
		bool "Skip. Do not block, output nothing."

	config SB_SEGGER_RTT_MODE_NO_BLOCK_TRIM
		bool "Trim: Do not block, output as much as fits."

	config SB_SEGGER_RTT_MODE_BLOCK_IF_FIFO_FULL
		bool "Block: Wait until there is space in the buffer."
endchoice

config SB_SEGGER_RTT_MODE
	int
	default 2 if SB_SEGGER_RTT_MODE_BLOCK_IF_FIFO_FULL
	default 1 if SB_SEGGER_RTT_MODE_NO_BLOCK_TRIM
	default 0

config SB_SEGGER_RTT_MEMCPY_USE_BYTELOOP
	bool "Use a simple byte-loop instead of standard memcpy"
endif

endmenu

endif
